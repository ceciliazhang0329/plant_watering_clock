<div>
  <div>
    <h1>
      Plant #<%= @the_plant.id %> details
    </h1>

    <div>
      <div>
        <a href="/plants">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_plant/<%= @the_plant.id %>">
          Delete plant
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_plant.user_id %>
      </dd>

      <dt>
        Plant name
      </dt>
      <dd>
        <%= @the_plant.plant_name %>
      </dd>

      <dt>
        Last watered date
      </dt>
      <dd>
        <%= @the_plant.last_watered_date %>
      </dd>

      <dt>
        Watering frequency
      </dt>
      <dd>
        <%= @the_plant.watering_frequency %>
      </dd>

      <dt>
        Sunlight requirement
      </dt>
      <dd>
        <%= @the_plant.sunlight_requirement %>
      </dd>

      <dt>
        Soil type
      </dt>
      <dd>
        <%= @the_plant.soil_type %>
      </dd>

      <dt>
        Other tips
      </dt>
      <dd>
        <%= @the_plant.other_tips %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_plant.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_plant.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit plant
    </h2>

    <form action="/modify_plant/<%= @the_plant.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_plant.user_id %>">
      </div>

      <div>
        <label for="plant_name_box">
          Plant name
        </label>

        <input type="text" id="plant_name_box" name="query_plant_name" value="<%= @the_plant.plant_name %>">
      </div>

      <div>
        <label for="last_watered_date_box">
          Last watered date
        </label>

        <input type="date" id="last_watered_date_box" name="query_last_watered_date" value="<%= @the_plant.last_watered_date %>">
      </div>

      <div>
        <label for="watering_frequency_box">
          Watering frequency
        </label>

        <input type="text" id="watering_frequency_box" name="query_watering_frequency" value="<%= @the_plant.watering_frequency %>">
      </div>

      <div>
        <label for="sunlight_requirement_box">
          Sunlight requirement
        </label>

        <input type="text" id="sunlight_requirement_box" name="query_sunlight_requirement" value="<%= @the_plant.sunlight_requirement %>">
      </div>

      <div>
        <label for="soil_type_box">
          Soil type
        </label>

        <input type="text" id="soil_type_box" name="query_soil_type" value="<%= @the_plant.soil_type %>">
      </div>

      <div>
        <label for="other_tips_box">
          Other tips
        </label>

        <input type="text" id="other_tips_box" name="query_other_tips" value="<%= @the_plant.other_tips %>">
      </div>

      <button>
        Update plant
      </button>
    </form>
  </div>
</div>

<hr>
